
<div class="container card">
    <%= simple_form_for @flat do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description, as: :text %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <div class="btn btn-primary">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
